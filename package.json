{
  "name": "markdown-vega-preview",
  "displayName": "markdown-vega-preview",
  "description": "Render the vega or vega-lite graphs in your markdown preview.",
  "version": "0.1.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/PrinOrange/markdown-vega-preview"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "preview": false,
  "contributes": {
    "markdown.previewSecurity": "allow-scripts",
    "markdown.markdownItPlugins": true,
    "markdown.previewStyles": [
      "./styles/style.css"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "npm@11.6.0",
  "dependencies": {
    "markdown-it": "^14.1.0",
    "vega": "^6.2.0",
    "vega-lite": "^6.4.1"
  },
  "publisher": "PrinOrange",
  "icon": "./docs/vega.ico"
}